<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atchen.gomall.manager.mapper.SysMenuMapper">

    <resultMap id="sysMenuMap" type="com.atchen.gomall.model.entity.system.SysMenu" autoMapping="true"></resultMap>

    <sql id="columns">
        id,parent_id,title,component,sort_value,status,create_time,update_time,is_deleted
    </sql>

    <!--    Get parent menu of current added menu-->
    <select id="selectParentMenu" resultMap="sysMenuMap">
        select <include refid="columns" /> from sys_menu where id=#{parentId}
    </select>

    <!--    Query menus that the user can operate on based on user id-->
    <select id="findMenusByUserId" resultMap="sysMenuMap">
        SELECT DISTINCT m.*
        FROM sys_menu m
                 INNER JOIN sys_role_menu srm ON m.id=srm.menu_id
                 INNER JOIN sys_user_role sur ON srm.role_id=sur.role_id
        WHERE sur.user_id=#{userId} AND m.is_deleted=0
    </select>

    <!--    Query whether there are submenus based on current menu id-->
    <select id="selectCountById" resultType="Integer">
        select count(*) from sys_menu
        where parent_id=#{id}
        and is_deleted=0
    </select>

    <!--    Delete-->
    <update id="delete">
        update sys_menu
        set is_deleted=1
        where id=#{id}
    </update>

    <!--Update-->
    <update id="update" >
        update sys_menu set
        <if test="parentId != null and parentId != ''">
            parent_id = #{parentId},
        </if>
        <if test="title != null and title != ''">
            title = #{title},
        </if>
        <if test="component != null and component != ''">
            component = #{component},
        </if>
        <if test="sortValue != null">
            sort_value = #{sortValue},
        </if>
        <if test="status != null">
            status = #{status},
        </if>
        update_time =  now()
        where
        id = #{id}
    </update>

    <!--    Menu Creation-->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into sys_menu (
            id,
            parent_id,
            title,
            component,
            sort_value,
            status
        ) values (
            #{id},
            #{parentId},
            #{title},
            #{component},
            #{sortValue},
            #{status}
            )
    </insert>

    <!--    Query all menus-->
    <select id="findAll" resultMap="sysMenuMap">
        select <include refid="columns" />
        from sys_menu
        where is_deleted=0
        order by sort_value
    </select>

</mapper>